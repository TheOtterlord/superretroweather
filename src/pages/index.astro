---
import Navbar from "../components/Navbar/Navbar.astro";
import NavbarSection from "../components/Navbar/NavbarSection"
import ResponsiveLogo from "../components/style/ResponsiveLogo";

import Search from '../components/Navbar/Search';
import ClientContainer from "../components/ClientContainer";
import MobileResponsiveSpacerGroup from '../components/MobileResponsiveSpacerGroup';
import SavedLocations from "../components/Navbar/SavedLocations";
import OpenSourceStatement from "../components/OpenSourceStatement.astro";
import AstroSpacer from "../components/AstroSpacer.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="global.css">
		<title>SuperRetroWeather</title>
		<meta name="viewport" content="minimum-scale=1, initial-scale=1, width=device-width" />
		<meta name="format-detection" content="telephone=no" />

		<meta name="title" content="SuperRetroWeather" />
		<meta name="description" content="A free open-source 8-bit weather app." />

		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://superretroweather.onrender.com/" />
		<meta property="og:title" content="SuperRetroWeather" />
		<meta property="og:description" content="A free open-source 8-bit weather app." />
		<meta property="og:image" content="/images/SRW_OG_Logo.png" />

		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://superretroweather.onrender.com/" />
		<meta property="twitter:title" content="SuperRetroWeather" />
		<meta property="twitter:description" content="A free open-source 8-bit weather app." />
		<meta property="twitter:image" content="/images/SRW_OG_Logo.png" />
	</head>
	<body>
		<Navbar>
			<NavbarSection client:load>
				<ResponsiveLogo client:load />
				<Search client:load />
			</NavbarSection>
      <SavedLocations client:load />
		</Navbar>
		<main>
      <section class="flex min-h-screen flex-col items-center justify-start mt-10">
        <div class="flex h-screen w-4/6 max-sm:w-full max-sm:p-3 flex-col items-center justify-start py-9 max-sm:py-9 pb-10">
          <MobileResponsiveSpacerGroup client:load />
					<ClientContainer client:load />
          <OpenSourceStatement />
          <p class="p-10" />
				</section>
			</main>
	</body>
</html>
